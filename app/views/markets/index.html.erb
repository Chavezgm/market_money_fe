
<h1>Markets</h1>
<table class="market-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @markets.each do |market| %>
      <section id="-market-<%= market.id %>">

        <tr>
          <td><%= market.name %></td>
          <td><%= market.city %></td>
          <td><%= market.state %></td>
          <td><%= button_to 'More info', market_path(market.id) %></td>
        </tr>
      </section>
    <% end %>
  </tbody>
</table>
